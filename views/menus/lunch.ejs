<%- include('../partials/header') %>

<div class="menu-page">
    <div class="menu-nav-box">
        <%- include('../partials/menuNav') %>
    </div>


    <div class="menu-display">
        <header>
            <h1><%= pageH1 %></h1>
            <p class="small-text"> Monday - Friday / 11am - 3pm</p>
            <p class="available">available now</p>
            <img src= "images/lasagna.jpg">
        </header>
        

        <div class="menu-section" id="pick-two-special">
            <h2>Pick Two Special</h2>
            <p id="pick-two-price">$12</p>
            <div id="pick-two">
                <p>Soup</p>
                <p>Salad</p>
                <p>Sandwich</p>
            </div>
            <a href="/pickTwo">Pick Two</a>
        </div>

        <div class="menu-section" id="tapas">
            <h2>Tapas : Appetizers</h2>
             <% dishes.forEach(function(dish){ %>
                <% if(dish.category === 'Tapas'){ %>
                    <div class="menu-item">
                            <form action="/orders/add-dish/<%= dish._id %>" method="POST">
                                <button type="submit" class="add-button">
                                        <img src="../../images/plus-burgundy.png" class="add">
                                </button>
                            </form>
    
                            <h3> <%= dish.name %> </h3>
                            <p class="description"> <%= dish.description %> </p>
                            
                            <% dish.amountAndPrice.forEach(function(aAndP){ %>
                                <% if(aAndP.amount === ''){ %>
                                    <p>$<%= aAndP.price %></p>
                                <% } else { %>
                                    <form action="">
                                        <button class="dish-select"><%= aAndP.amount %>: $<%= aAndP.price %></button>
                                    </form>
                                <% } %>
                                
                            <% }) %>
                            <% dish.addOns.forEach(function(addOn){ %>
                                <form action="">
                                    <button class="dish-select add-on"><%= addOn.addOn %> +$<%= addOn.price %></button>
                                </form>
                            <% }) %>
                        </div>
                   <% } %>
            <% }) %>
        </div>
        <div class="menu-section" id="soups">
            <h2>Sopas : Soups</h2>
             <% dishes.forEach(function(dish){ %>
                <% if(dish.category === 'Soup'){ %>
                    <div class="menu-item">
                        <form action="/orders/add-dish/<%= dish._id %>" method="POST">
                            <button type="submit" class="add-button">
                                    <img src="../../images/plus-burgundy.png" class="add">
                            </button>
                        </form>

                        <h3> <%= dish.name %> </h3>
                        <p class="description"> <%= dish.description %> </p>
                        
                        <% dish.amountAndPrice.forEach(function(aAndP){ %>
                            <form action="">
                                <button class="dish-select"><%= aAndP.amount %>: $<%= aAndP.price %></button>
                            </form>
                        <% }) %>
                        <% dish.addOns.forEach(function(addOn){ %>
                            <form action="">
                                <button class="dish-select add-on"><%= addOn.addOn %> +$<%= addOn.price %></button>
                            </form>
                        <% }) %>
                    </div>
                   <% } %>
            <% }) %>
        </div>
        
        <img src="images/soup-and-salad.jpg" class="banner" alt="Cafe Madrid Soup & Salad">
        <div class="menu-section" id="salads">
            
            <h2>Ensalades : Salads</h2>
             <% dishes.forEach(function(dish){ %>
                <% if(dish.category === 'Salad'){ %>
                    <div class="menu-item">
                            <form action="/orders/add-dish/<%= dish._id %>" method="POST">
                                <button type="submit" class="add-button">
                                        <img src="../../images/plus-burgundy.png" class="add">
                                </button>
                            </form>
                            <h3> <%= dish.name %> </h3>
                            <p class="description"> <%= dish.description %> </p>
                            
    
                            <% dish.addOns.forEach(function(addOn){ %>
                                <form action="">
                                    <button class="dish-select"><%= addOn.addOn %></button>
                                </form>
                            <% }) %>
                            <% dish.amountAndPrice.forEach(function(aAndP){ %>
                                <form action="">
                                    <button class="dish-select"><%= aAndP.amount %>: $<%= aAndP.price %></button>
                                </form>
                            <% }) %>
    
                        </div>
                   <% } %>
            <% }) %>

        </div>
        
        <div class="menu-section" id="sandwiches">
                <h2>Sandwiches</h2>
                <% dishes.forEach(function(dish){ %>
                   <% if(dish.category === 'Sandwich'){ %>
                       <div class="menu-item">
                            <form action="/orders/add-dish/<%= dish._id %>" method="POST">
                                <button type="submit" class="add-button">
                                        <img src="../../images/plus-burgundy.png" class="add">
                                </button>
                            </form>
                            <h3> <%= dish.name %> </h3>
                            <p class="description"> <%= dish.description %> </p>
    
                            <% dish.addOns.forEach(function(addOn){ %>
                                <form action="">
                                    <button class="dish-select"><%= addOn.addOn %>: +$<%= addOn.price %></button>
                                </form>
                            <% }) %>
                            <% dish.amountAndPrice.forEach(function(aAndP){ %>
                                <form action="">
                                    <button class="dish-select"><%= aAndP.amount %>: $<%= aAndP.price %></button>
                                </form>
                            <% }) %>
                        </div>
                    <% } %>
            <% }) %>
        </div>

        <span class="small-text">
            <h6>Consumer Advisory</h6>
            <p>* Thoroughly cooking foods of animal origin such as beef, eggs, fish, lamb, pork, poultry, or shellfish reduces the risk of foodborne illness. Consult your physician or Public Health official for further information.</p>
        </span>
    
        <div class="suggestion-boxes">
            <div class="suggestion-1">
                <img src="images/sangria.jpg" alt="Sangria from Cafe Madrid">
            </div>
            <div class="suggestion-2"></div>
            <div class="suggestion-3"></div>
        </div>
    </div>
    <%- include('../partials/order') %>
</div>



<%- include('../partials/footer') %>